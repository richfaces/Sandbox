<cdk:root xmlns="http://jboss.org/schema/richfaces/cdk/xhtml-el"
          xmlns:cdk="http://jboss.org/schema/richfaces/cdk/core"
          xmlns:c="http://jboss.org/schema/richfaces/cdk/jstl/core"
          xmlns:cc="http://jboss.org/schema/richfaces/cdk/jsf/composite">

    <cc:interface>
        <cdk:class>org.richfaces.bootstrap.ui.well.WellRenderer</cdk:class>
        <cdk:superclass>org.richfaces.bootstrap.ui.well.WellRendererBase</cdk:superclass>
        <cdk:renderer-type>org.richfaces.bootstrap.WellRenderer</cdk:renderer-type>
        <cdk:component-base-class>org.richfaces.bootstrap.ui.well.AbstractWell</cdk:component-base-class>
    </cc:interface>

    <cc:implementation>
        <div id="#{clientId}" class="#{component.generateClasses()}" style="#{component.style}">
            <cdk:body/>
        </div>
    </cc:implementation>

</cdk:root>